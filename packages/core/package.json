    "@babel/preset-env": "7.4.4",
    "@babel/preset-react": "7.0.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "jest": "24.8.0",
    "rollup": "1.12.0",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "10.0.0",
    "rollup-plugin-node-resolve": "4.2.3",
