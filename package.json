{
  "name": "formiz",
  "private": true,
  "author": {
    "name": "Ivan Dalmet",
    "email": "ivan@dalmet.fr",
    "url": "https://github.com/ivan-dalmet"
  },
  "scripts": {
    "bs": "lerna bootstrap",
    "start": "lerna run start --parallel --ignore @formiz/example",
    "test": "lerna run test --parallel --ignore @formiz/{docs,example}",
    "test:dev": "lerna run test:dev --parallel --ignore @formiz/{docs,example}",
    "deploy": "lerna publish --ignore-changes @formiz/{docs,example}",
    "postdeploy": "yarn docs:deploy",
    "docs:deploy": "lerna run build --parallel --ignore @formiz/example && lerna run deploy --scope @formiz/docs"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "lerna": "^3.13.4"
  },
  "workspaces": [
    "examples",
    "docs",
    "./packages/*"
  ]
}
